{
  "name": "react-native-session-timeout",
  "version": "0.1.6",
  "description": "A React Native library for handling user session timeouts with app lifecycle support, warning dialogs, and Android 10+ compatibility",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "source": "src/index.tsx",
  "files": [
    "lib",
    "android/src",
    "android/build.gradle",
    "android/src/main/AndroidManifest.xml",
    "ios/SessionTimeoutModule.m",
    "ios/SessionTimeoutModule.swift",
    "react-native-session-timeout.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "postinstall": "rm -rf example/node_modules/react-native-session-timeout/node_modules || true",
    "example:android": "npm run prepare && npm run example && cd example && npx react-native run-android",
    "example:ios": "npm run prepare && npm run example && cd example && npx react-native run-ios"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "session",
    "timeout",
    "inactivity",
    "idle",
    "user-activity",
    "auto-logout",
    "app-lifecycle",
    "idle-detection",
    "idle-timer",
    "user-inactivity",
    "inactivity-detection",
    "security",
    "session-timeout",
    "session-management"
  ],
  "repository": "https://github.com/ajayi-joseph/react-native-session-timeout",
  "author": "Joseph Ajayi <adekoyeajayi@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ajayi-joseph/react-native-session-timeout/issues"
  },
  "homepage": "https://github.com/ajayi-joseph/react-native-session-timeout#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native/babel-preset": "0.84.0",
    "@release-it/conventional-changelog": "^10.0.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "pod-install": "^1.0.9",
    "prettier": "^3.4.0",
    "react": "19.2.4",
    "react-native": "^0.84.0",
    "react-native-builder-bob": "^0.40.17",
    "react-test-renderer": "19.2.4",
    "release-it": "^19.2.3",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/jest.polyfills.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/example/__tests__/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.test.{ts,tsx}",
      "!src/**/__tests__/**"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4"
  }
}
